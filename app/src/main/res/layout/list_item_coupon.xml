<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="189dp"
    tools:layout_editor_absoluteY="302dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="2dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/markCouponImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            card_view:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/markCouponDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deadline" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/markCouponName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/couponName"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/couponMarkBottun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:backgroundTint="#FFFFFF"
                android:scaleType="centerCrop"

                card_view:srcCompat="@drawable/ic_bookmark_border_24dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/markCouponPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nedan"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>