<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_circle">
        <TextView
            android:id="@+id/n_title_color"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/bg_circle_top"/>
        <ImageView
            android:id="@+id/n_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/n_title"
            android:layout_width="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@id/n_image"
            android:layout_marginTop="3dp"
            android:text="Tangerine"
            android:textSize="4pt"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/n_show_more"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:text="Show More"
            android:textSize="4pt"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/n_line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/n_title_color"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/n_text"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_alignLeft="@id/n_image"
            android:textSize="6pt"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@id/n_line1"
            android:text="texttexttexttexttexttexttexttexttexttext" />
        <TextView
            android:id="@+id/n_text2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/n_image"
            android:textSize="5pt"
            android:textColor="#000000"
            android:lines="2"
            android:layout_below="@id/n_text"
            android:text="texttexttexttexttexttexttexttexttexttext" />
    </RelativeLayout>
</RelativeLayout>